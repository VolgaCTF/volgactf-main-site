doctype html
- var availableLangs = locales.filter(x => x !== locale && !!lang(x))
- var localePath = locale==defaultLocale ? "" : "/"+locale
include mixins
html(lang=locale)
    include partials/head
    body
        div.bg-first
            +headerMenu(menu,locale,localePath,selected_menu_item)
            - var transformedText = markdown_text(quals_text)
            section#quals_welcome.second_welcome_padding
                div.grid-x
                    div.large-offset-1.large-3.cell.cell-text
                        h1.main #{quals_header_main}
                        h1 #{quals_header_sub}
                        .
                            !{transformedText}
                        hr
            if scoreboard
                section#quals-scoreboard
                    div.grid-x
                        div.large-offset-1.large-4.cell.cell-text
                            h1.main SCOREBOARD
                        div.large-offset-1.large-10.cell.cell-text
                            +scoreboard(scoreboard)
        include partials/footer

doctype html
- var availableLangs = locales.filter(x => x !== locale && !!lang(x))
- var localePath = locale==defaultLocale ? "" : "/"+locale
include mixins
html(lang=locale)
    include partials/head
    body
        div.bg-first
            +headerMenu(menu,locale,localePath,"ctf")
            section#finals_welcome.finals_welcome_padding
                div.grid-x
                    div.large-offset-1.large-3.cell.cell-text
                        h1.main #{finals_header_main}
                        h1 #{finals_header_sub}
                        .
                            #{finals_text}
                        hr
        section#stream
            div.grid-x
                div.large-offset-1.large-4.cell.cell-text
                    h1.main #{stream_header}
            div.grid-x
                div.cell.medium-offset-4.medium-4.stream
                    iframe(frameborder="0", width="100%", height="100%" scrolling="no" src="//ZOBRtv.clients.webcaster.pro/iframe/feed/start/free_214715976d5bbca436ac8580847cef21_hd/207_4457758271/fa30224785e62a045f36001e920b17c0/4661476985?sr=443&type_id=&autostart=1&width=100%25&height=100%25&lang=ru" allowfullscreen="allowfullscreen")
        section#schedule
            div.grid-x
                div.large-offset-1.large-4.cell.cell-text
                    h1.main #{schedule_header}
            div.grid-x
                div.cell.medium-offset-4.medium-4.schedule
                    +schedule(schedule,locale)
        section#teams
            div.grid-x
                div.large-offset-1.large-4.cell.cell-text
                    h1.main #{teams_header_main}
                    h1 #{teams_header_sub}
                div.large-offset-1.large-10.cell.cell-text
                    +teamsTable(teams_table_waiting, teams_table_accepted, teams, locale)
        section#documents
            div.grid-x.bg-second
                div.large-offset-1.large-2.cell.cell-text
                    h1.main #{documents_header_main}
                div.large-6.large-offset-2.cell.cell-text
                    div.grid-x.cell-window
                        div.large-6.cell
                            +iconedText("/images/download.svg",document1_text,"/volgactf-2017-finals/press-release.html")
        section#partners
            div.grid-x
                div.large-offset-1.large-4.cell.cell-text
                    h1.main #{partners_header_main}
                    h1 #{partners_header_sub}
                div.large-offset-1.large-10.cell
                    +partnersGrid(partners,locale,-1)


        include partials/footer
